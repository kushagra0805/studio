
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>
    
    <rewrite>
      <rules>
        <!-- First, check if the request is for a static file and if so, let IIS handle it. -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^(?!server\.js)(.*)" ignoreCase="true" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" ignoreCase="true" />
          </conditions>
          <action type="None" />
        </rule>
        
        <!-- If it's not a static file, rewrite the request to server.js for Next.js to handle. -->
        <rule name="DynamicContent">
          <match url="^(.*)" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Allow iisnode to access the node_modules folder. -->
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="node_modules" />
        </hiddenSegments>
      </requestFiltering>
    </security>
    
    <!-- Set environment for Next.js to run in production mode. -->
    <iisnode node_env="production" />
    
  </system.webServer>
</configuration>
