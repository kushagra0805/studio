<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <!-- 
          Rule 1: Static Content
          This rule checks if the request is for a physical file or directory on the disk.
          If it is (e.g., a CSS file, an image), IIS serves it directly and stops processing further rules.
          This is the key to making your graphics and styles load correctly.
        -->
        <rule name="StaticContent" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAny">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" />
          </conditions>
          <action type="None" />
        </rule>

        <!-- 
          Rule 2: Next.js App
          This rule only runs if the first rule did not match (i.e., the request was NOT for a static file).
          It rewrites the request to server.js, so your Next.js application can handle page routing.
        -->
        <rule name="NextJsApp" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>
    
    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="node_modules" />
        </hiddenSegments>
      </requestFiltering>
    </security>
    
    <iisnode node_env="production"
             loggingEnabled="true"
             devErrorsEnabled="true" />
             
  </system.webServer>
</configuration>