<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- This <clear /> tag is the critical fix. It removes conflicting handlers inherited from the parent server configuration. -->
      <clear />
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <!-- This rule ensures that requests for static files in the .next folder (like CSS and JS) are not handled by the Node.js application. -->
        <rule name="NextJsStatic" stopProcessing="true">
          <match url="^\_next\/.+" />
          <action type="None" />
        </rule>
        
        <!-- This rule sends all other requests to your Next.js application via server.js. -->
        <rule name="NextJs" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Enables more detailed error logging on the server -->
    <httpErrors errorMode="Detailed"></httpErrors>
    
    <!-- Watches for changes in these files to automatically restart the application -->
    <iisnode watchedFiles="web.config;*.js;*.mjs" />
  </system.webServer>
</configuration>
