<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <!-- Rule 1: Do not process requests for static files -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^((_next|public)/.*)" />
          <conditions logicalGrouping="MatchAll" />
          <action type="None" />
        </rule>

        <!-- Rule 2: All other requests are handled by the Next.js app -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Enable logging for iisnode -->
    <iisnode loggingEnabled="true" devErrorsEnabled="true" />
    
  </system.webServer>
</configuration>
